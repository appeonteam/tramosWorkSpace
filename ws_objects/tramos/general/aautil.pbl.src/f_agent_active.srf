global function boolean f_agent_active (long al_agentnr);/* This function checks if an agent is active or not. User to validate in datawindows */
integer	li_active

SELECT AGENT_ACTIVE
	INTO :li_active
	FROM AGENTS
	WHERE AGENT_NR = :al_agentnr ;

if li_active = 1 then
	return true
else
	return false
end if

end function

